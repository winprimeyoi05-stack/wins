# =================================================================
# TELEGRAM BOT CONFIGURATION
# =================================================================

# Bot Token dari @BotFather
# Cara mendapatkan: Chat dengan @BotFather -> /newbot -> ikuti instruksi
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Admin User IDs (pisahkan dengan koma jika lebih dari satu)
# Cara mendapatkan: Chat dengan @userinfobot untuk mendapatkan User ID Anda
ADMIN_IDS=123456789,987654321

# Bot Username (opsional)
BOT_USERNAME=premium_store_bot

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Path file database SQLite (akan dibuat otomatis)
DATABASE_PATH=store.db

# =================================================================
# QRIS PAYMENT CONFIGURATION
# =================================================================

# QRIS Merchant Information
QRIS_MERCHANT_ID=ID1234567890123
QRIS_MERCHANT_NAME=Premium Apps Store
QRIS_CITY=Jakarta
QRIS_COUNTRY_CODE=ID
QRIS_CURRENCY_CODE=360
QRIS_TRANSACTION_FEE=0

# =================================================================
# SERVER CONFIGURATION
# =================================================================

# Server port untuk webhook (opsional, default polling)
SERVER_PORT=8080

# Webhook URL jika menggunakan webhook mode
WEBHOOK_URL=

# =================================================================
# BUSINESS CONFIGURATION
# =================================================================

# Informasi Toko
STORE_NAME=Premium Apps Store
STORE_DESCRIPTION=Toko aplikasi premium terpercaya dengan pembayaran QRIS

# Informasi Kontak Admin
ADMIN_USERNAME=admin_username
ADMIN_EMAIL=admin@premiumstore.com
SUPPORT_PHONE=+6281234567890

# Jam Operasional
BUSINESS_HOURS=08:00 - 22:00 WIB
TIMEZONE=Asia/Jakarta

# =================================================================
# APPLICATION SETTINGS
# =================================================================

# Logging Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Maksimal item dalam keranjang per user
MAX_CART_ITEMS=10

# Simbol mata uang
CURRENCY_SYMBOL=Rp

# Default product image jika tidak ada gambar
DEFAULT_PRODUCT_IMAGE=https://via.placeholder.com/300x200?text=Premium+App

# =================================================================
# ADVANCED SETTINGS (Opsional)
# =================================================================

# Untuk webhook mode (opsional, polling adalah default)
WEBHOOK_PORT=8443

# Untuk Docker deployment
DOCKER_ENV=false